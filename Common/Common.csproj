<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Dwarrowdelf</RootNamespace>
    <AssemblyName>Dwarrowdelf.Common</AssemblyName>
    <SolutionDir Condition="$(SolutionDir) == '' Or $(SolutionDir) == '*Undefined*'">..\</SolutionDir>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
	  <Reference Include="Dwarrowdelf.Common.ILSupport">
		  <HintPath>ILSupport\Dwarrowdelf.Common.ILSupport.dll</HintPath>
      </Reference>
	  <ProjectReference Include="..\MemoryMappedLog\MMLog\MMLog.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NetSerializer" Version="4.1.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SharpNoise" Version="0.12.1.1" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.2" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Game\Items.json" />
    <EmbeddedResource Include="Game\Livings.json" />
    <EmbeddedResource Include="Game\Materials.json" />
    <EmbeddedResource Include="Game\Workbenches.json" />
  </ItemGroup>
</Project>